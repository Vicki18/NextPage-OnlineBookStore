@page "/admin/reviews/details"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@using OnlineBookStore.Domain
@using OnlineBookStore.Services
@attribute [Authorize(Roles = "Administrator")]

@inject AdminReviewService Reviews
@inject NavigationManager Nav

<PageTitle>Review Details</PageTitle>

@if (loading)
{
    <p class="text-muted">Loading...</p>
}
else if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">@error</div>
    <a class="btn btn-outline-secondary" href="/admin/reviews">Back</a>
}
else if (item == null)
{
    <div class="alert alert-warning">Review not found.</div>
    <a class="btn btn-outline-secondary" href="/admin/reviews">Back</a>
}
else
{
    <div class="d-flex align-items-end justify-content-between flex-wrap gap-2 mb-3">
        <div>
            <h1 class="mb-1">Review #@item.Id</h1>
            <div class="text-muted">
                @((item.Book?.Title ?? "Unknown Book")) • @((item.Customer?.FullName ?? "Customer"))
            </div>
        </div>

        <div class="d-flex gap-2">
            <a class="btn btn-outline-danger" href="/admin/reviews/delete?id=@item.Id">Delete</a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="text-muted small">Book</div>
                    <div class="fs-5 fw-semibold">@((item.Book?.Title ?? "Unknown Book"))</div>
                </div>

                <div class="col-md-6">
                    <div class="text-muted small">Customer</div>
                    <div class="fs-5 fw-semibold">@((item.Customer?.FullName ?? "Customer"))</div>
                    <div class="text-muted">@((item.Customer?.Email ?? ""))</div>
                </div>

                <div class="col-md-6">
                    <div class="text-muted small">Rating</div>
                    <div class="fs-5 fw-semibold">@item.Rating / 5</div>
                </div>

                <div class="col-md-6">
                    <div class="text-muted small">Created</div>
                    <div class="fs-5 fw-semibold">@item.DateCreated.ToString("dd MMM yyyy, HH:mm")</div>
                </div>

                <div class="col-12">
                    <div class="text-muted small">Comment</div>
                    <div class="fs-5 fw-semibold">
                        @(string.IsNullOrWhiteSpace(item.Comment) ? "(No comment)" : item.Comment)
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <a class="btn btn-outline-secondary" href="/admin/reviews">Back to list</a>
            </div>
        </div>
    </div>
}

@code {
    [SupplyParameterFromQuery] public int id { get; set; }

    private bool loading = true;
    private string? error;
    private Review? item;

    protected override async Task OnInitializedAsync()
    {
        loading = true;
        error = null;

        try
        {
            item = await Reviews.GetReviewAsync(id);
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            loading = false;
        }
    }
}
