@page "/admin/categories/delete"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@using OnlineBookStore.Domain
@using OnlineBookStore.Services
@attribute [Authorize(Roles = "Administrator")]

@inject AdminCategoryService Categories
@inject NavigationManager Nav

<PageTitle>Delete Category</PageTitle>

<h1 class="mb-1">Delete Category</h1>
<div class="text-muted mb-3">This action cannot be undone.</div>

@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">@error</div>
}

@if (loading)
{
    <p class="text-muted">Loading...</p>
}
else if (item == null)
{
    <div class="alert alert-warning">Category not found.</div>
    <a class="btn btn-outline-secondary" href="/admin/categories">Back</a>
}
else
{
    <div class="alert alert-warning">
        Are you sure you want to delete <b>@(item.CategoryName ?? "(No Name)")</b>?
        <div class="small mt-2 text-muted">
            Delete is blocked if books are linked to this category.
        </div>
    </div>

    <div class="d-flex gap-2">
        <button class="btn btn-danger" @onclick="DeleteAsync" disabled="@deleting">Delete</button>
        <a class="btn btn-outline-secondary" href="/admin/categories">Cancel</a>
    </div>
}

@code {
    [SupplyParameterFromQuery] public int id { get; set; }

    private bool loading = true;
    private bool deleting;
    private string? error;

    private Category? item;

    protected override async Task OnInitializedAsync()
    {
        item = await Categories.GetCategoryAsync(id);
        loading = false;
    }

    private async Task DeleteAsync()
    {
        deleting = true;
        error = null;

        try
        {
            await Categories.DeleteAsync(id);
            Nav.NavigateTo("/admin/categories");
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            deleting = false;
        }
    }
}
