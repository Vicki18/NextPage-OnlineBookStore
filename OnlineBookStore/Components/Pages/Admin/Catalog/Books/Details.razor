@page "/admin/books/details"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@using OnlineBookStore.Domain
@using OnlineBookStore.Services
@attribute [Authorize(Roles = "Administrator")]

@inject AdminBookService Books

<PageTitle>Book Details</PageTitle>

@if (loading)
{
    <p class="text-muted">Loading...</p>
}
else if (item == null)
{
    <div class="alert alert-warning">Book not found.</div>
    <a class="btn btn-outline-secondary" href="/admin/books">Back</a>
}
else
{
    <div class="d-flex align-items-end justify-content-between flex-wrap gap-2 mb-3">
        <div>
            <h1 class="mb-1">@((item.Title ?? "(Untitled)"))</h1>
            <div class="text-muted">@((item.Author?.Name ?? "-")) • @((item.Category?.CategoryName ?? "-"))</div>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary" href="/admin/books/edit?id=@item.Id">Edit</a>
            <a class="btn btn-outline-danger" href="/admin/books/delete?id=@item.Id">Delete</a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="text-muted small">Price</div>
                    <div class="fw-semibold">$@item.Price.ToString("0.00")</div>
                </div>
                <div class="col-md-4">
                    <div class="text-muted small">Stock Qty</div>
                    <div class="fw-semibold">@item.StockQty</div>
                </div>
                <div class="col-md-4">
                    <div class="text-muted small">ISBN</div>
                    <div class="fw-semibold">@((item.ISBN ?? "-"))</div>
                </div>

                <div class="col-12">
                    <div class="text-muted small">Description</div>
                    <div>@(string.IsNullOrWhiteSpace(item.Description) ? "-" : item.Description)</div>
                </div>

                <div class="col-12">
                    <div class="text-muted small">Cover Image URL</div>
                    <div class="text-break">@((item.CoverImageUrl ?? "-"))</div>
                </div>
            </div>

            <a class="btn btn-outline-secondary mt-4" href="/admin/books">Back to list</a>
        </div>
    </div>
}

@code {
    [SupplyParameterFromQuery] public int id { get; set; }
    private bool loading = true;
    private Book? item;

    protected override async Task OnInitializedAsync()
    {
        item = await Books.GetBookAsync(id);
        loading = false;
    }
}
