@page "/admin/catalog"

<PageTitle>Catalog Hub</PageTitle>

<div class="admin-header">
    <h1>Catalog</h1>
    <p class="admin-subtitle">
        Quick access to catalog management — books, authors, categories and reviews.
    </p>
</div>

<div class="admin-grid">
    <div class="admin-card">
        <div class="admin-card-top">
            <h3>Books</h3>
            <p>Create and maintain your store inventory, pricing, and stock.</p>
        </div>
        <a class="admin-card-btn primary" href="/admin/books">Manage Books</a>
    </div>

    <div class="admin-card">
        <div class="admin-card-top">
            <h3>Authors</h3>
            <p>Maintain author profiles and link them to books.</p>
        </div>
        <a class="admin-card-btn primary" href="/admin/authors">Manage Authors</a>
    </div>

    <div class="admin-card">
        <div class="admin-card-top">
            <h3>Categories</h3>
            <p>Organize books with meaningful categories for browsing.</p>
        </div>
        <a class="admin-card-btn secondary" href="/admin/categories">Manage Categories</a>
    </div>

    <div class="admin-card">
        <div class="admin-card-top">
            <h3>Reviews</h3>
            <p>Moderate customer feedback and keep your store trustworthy.</p>
        </div>
        <a class="admin-card-btn secondary" href="/admin/reviews">Manage Reviews</a>
    </div>

    <div class="admin-card">
        <div class="admin-card-top">
            <h3>Dashboard</h3>
            <p>Return to the admin overview for orders, payments, and customers.</p>
        </div>
        <a class="admin-card-btn outline" href="/admin">View Dashboard</a>
    </div>
</div>
