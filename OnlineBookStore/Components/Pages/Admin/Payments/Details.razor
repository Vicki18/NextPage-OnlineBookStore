@page "/admin/payments/details"
@rendermode InteractiveServer

@using OnlineBookStore.Domain
@using OnlineBookStore.Services

@inject AdminPaymentService AdminPayments

<PageTitle>Payment Details</PageTitle>

<div class="d-flex align-items-end justify-content-between flex-wrap gap-2 mb-3">
    <div>
        <h1 class="mb-1">Payment #@Id</h1>
        <div class="text-muted">Payment record details.</div>
    </div>

    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary" href="/admin/payments">Back</a>
    </div>
</div>

@if (loading)
{
    <p class="text-muted">Loading...</p>
}
else if (!string.IsNullOrWhiteSpace(error))
{
    <div class="alert alert-danger">@error</div>
}
else if (payment is null)
{
    <div class="alert alert-warning">Payment not found.</div>
}
else
{
    <div class="row g-3">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header bg-white fw-semibold">Payment</div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-5">Status</dt>
                        
                        <dd class="col-7">@Safe(payment.PaymentStatus)</dd>

                        <dt class="col-5">Method</dt>
                        <dd class="col-7">@Safe(payment.PaymentMethod)</dd>

                        <dt class="col-5">Amount</dt>
                        <dd class="col-7 fw-semibold">$@payment.Amount.ToString("0.00")</dd>

                        <dt class="col-5">Date Paid</dt>
                        <dd class="col-7">@((payment.DatePaid.HasValue) ? payment.DatePaid.Value.ToString("dd MMM yyyy, hh:mm tt") : "-")</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card">
                <div class="card-header bg-white fw-semibold">Order</div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <div class="text-muted">Order</div>
                            <div class="fw-semibold">#@payment.OrderId</div>
                        </div>
                        <div class="text-end">
                            <a class="btn btn-outline-primary" href="/admin/orders/details?id=@payment.OrderId">Open Order</a>
                        </div>
                    </div>

                    <hr />

                    <div class="text-muted">Customer</div>
                    <div class="fw-semibold">@Safe(payment.Order?.Customer?.FullName)</div>
                    <div class="text-muted small">@Safe(payment.Order?.Customer?.Email)</div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private bool loading = true;
    private string? error;
    private Payment? payment;

    [SupplyParameterFromQuery]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        loading = true;
        try
        {
            payment = await AdminPayments.GetPaymentDetailsAsync(Id);
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            loading = false;
        }
    }

    private static string Safe(string? s)
        => string.IsNullOrWhiteSpace(s) ? "-" : s.Trim();
}
